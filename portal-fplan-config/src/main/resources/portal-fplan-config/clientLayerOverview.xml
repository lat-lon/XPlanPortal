<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="org.geomajas.configuration.client.ClientVectorLayerInfo" id="clientLayerOverview">
    <property name="serverLayerId" value="layerOverview"/>
    <property name="label" value="Overview"/>
    <property name="visible" value="true"/>
    <property name="maximumScale" value="1:50"/>
    <property name="minimumScale" value="1:500000000"/>
    <property name="namedStyleInfo" ref="layerOverviewStyleInfo"/>
  </bean>

</beans>
	
